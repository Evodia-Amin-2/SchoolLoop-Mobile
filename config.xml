<?xml version='1.0' encoding='utf-8'?>
<widget id="com.schoolloop.mobileloop.app" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MobileLoop</name>
    <description>
        Mobile App for School Loop.
    </description>
    <author email="rob@schoolloop.com" href="http://www.schoolloop.com">
        School Loop Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="KeepRunning" value="false" />
        <icon density="ldpi" src="build/images/icon/android/mipmap-ldpi/ic_launcher.png" />
        <icon density="mdpi" src="build/images/icon/android/mipmap-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="build/images/icon/android/mipmap-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="build/images/icon/android/mipmap-xhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="build/images/icon/android/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxxhdpi" src="build/images/icon/android/mipmap-xxxhdpi/ic_launcher.png" />
        <splash density="land-hdpi" src="build/images/splash/android/land-hdpi.png" />
        <splash density="land-ldpi" src="build/images/splash/android/land-ldpi.png" />
        <splash density="land-mdpi" src="build/images/splash/android/land-mdpi.png" />
        <splash density="land-xhdpi" src="build/images/splash/android/land-xhdpi.png" />
        <splash density="land-xxhdpi" src="build/images/splash/android/land-xxhdpi.png" />
        <splash density="land-xxxhdpi" src="build/images/splash/android/land-xxxhdpi.png" />
        <splash density="port-hdpi" src="build/images/splash/android/port-hdpi.png" />
        <splash density="port-ldpi" src="build/images/splash/android/port-ldpi.png" />
        <splash density="port-mdpi" src="build/images/splash/android/port-mdpi.png" />
        <splash density="port-xhdpi" src="build/images/splash/android/port-xhdpi.png" />
        <splash density="port-xxhdpi" src="build/images/splash/android/port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="build/images/splash/android/port-xxxhdpi.png" />
    </platform>
    <platform name="ios">
        <preference name="Orientation" value="all" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="40" src="build/images/icon/ios/Icon-40.png" width="40" />
        <icon height="80" src="build/images/icon/ios/Icon-40@2x.png" width="80" />
        <icon height="120" src="build/images/icon/ios/Icon-40@3x.png" width="120" />
        <icon height="120" src="build/images/icon/ios/Icon-60@2x.png" width="120" />
        <icon height="180" src="build/images/icon/ios/Icon-60@3x.png" width="180" />
        <icon height="72" src="build/images/icon/ios/Icon-72.png" width="72" />
        <icon height="144" src="build/images/icon/ios/Icon-72@2x.png" width="144" />
        <icon height="76" src="build/images/icon/ios/Icon-76.png" width="76" />
        <icon height="152" src="build/images/icon/ios/Icon-76@2x.png" width="152" />
        <icon height="167" src="build/images/icon/ios/Icon-83.5@2x.png" width="167" />
        <icon height="50" src="build/images/icon/ios/Icon-Small-50.png" width="50" />
        <icon height="100" src="build/images/icon/ios/Icon-Small-50@2x.png" width="100" />
        <icon height="29" src="build/images/icon/ios/Icon-Small.png" width="29" />
