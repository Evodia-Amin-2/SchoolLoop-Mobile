<?xml version='1.0' encoding='utf-8'?>
<widget id="com.schoolloop.mobileloop.app" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MobileLoop</name>
    <description>
        Mobile App for School Loop.
    </description>
    <author email="rob@schoolloop.com" href="http://www.schoolloop.com">
        School Loop Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="KeepRunning" value="false" />
    </platform>
    <platform name="ios">
        <preference name="Orientation" value="all" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashScreen" value="screen" />
    <preference name="EnableViewportScale" value="true" />
    <engine name="ios" spec="~4.1.1" />
    <engine name="android" spec="~5.1.1" />
    <engine name="browser" spec="~4.1.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.3" />
    <plugin name="cordova-plugin-device" spec="~1.1.2" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.1" />
    <plugin name="cordova-plugin-globalization" spec="~1.0.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.4.0" />
    <plugin name="cordova-plugin-screen-orientation" spec="~1.4.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.2.2" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.3" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.1" />
    <plugin name="com.cmackay.plugins.googleanalytics" spec="~0.1.22" />
    <plugin name="cordova-plugin-x-toast" spec="~2.5.1" />
    <plugin name="ionic-plugin-keyboard" spec="~2.2.0" />
    <plugin name="cordova-plugin-spinner-dialog" spec="~1.3.1" />
    <plugin name="phonegap-plugin-push" spec="~1.6.3">
        <variable name="SENDER_ID" value="497458348283" />
    </plugin>
</widget>
