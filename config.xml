<?xml version='1.0' encoding='utf-8'?>
<widget id="com.schoolloop.mobileloop.mirror" version="2.0.0" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MobileLoop</name>
    <description>
        Mobile App for School Loop.
    </description>
    <author email="rob@schoolloop.com" href="http://www.schoolloop.com">
        School Loop Team
    </author>

    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" version="1"/>
    <access origin="*"/>
    <allow-intent href="*"/>
    <allow-navigation href="*"/>

    <feature name="StatusBar">
        <param name="ios-package" value="CDVStatusBar" onload="true"/>
    </feature>

    <preference name="webviewbounce" value="false"/>
    <preference name="UIWebViewBounce" value="false"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="BackupWebStorage" value="none"/>
    <preference name="SplashScreenDelay" value="7000"/>
    <preference name="SplashScreen" value="screen"/>
    <preference name="Orientation" value="default"/>
    <preference name="EnableViewportScale" value="true"/>

    <icon src="build/images/icon/default.png"/>

    <platform name="android">
        <preference name="KeepRunning" value="false"/>

        <icon src="build/images/icon/android/ldpi.png" density="ldpi"/>
        <icon src="build/images/icon/android/mdpi.png" density="mdpi"/>
        <icon src="build/images/icon/android/hdpi.png" density="hdpi"/>
        <icon src="build/images/icon/android/xhdpi.png" density="xhdpi"/>
        <icon src="build/images/icon/android/xxhdpi.png" density="xxhdpi"/>

        <!-- you can use any density that exists in the Android project -->
        <splash src="build/images/splash/android/land-hdpi.png" density="land-hdpi"/>
        <splash src="build/images/splash/android/land-ldpi.png" density="land-ldpi"/>
        <splash src="build/images/splash/android/land-mdpi.png" density="land-mdpi"/>
        <splash src="build/images/splash/android/land-xhdpi.png" density="land-xhdpi"/>

        <splash src="build/images/splash/android/port-hdpi.png" density="port-hdpi"/>
        <splash src="build/images/splash/android/port-ldpi.png" density="port-ldpi"/>
        <splash src="build/images/splash/android/port-mdpi.png" density="port-mdpi"/>
        <splash src="build/images/splash/android/port-xhdpi.png" density="port-xhdpi"/>
    </platform>

    <platform name="ios">
        <!-- iOS 8.0+ -->
        <!-- iPhone 6 Plus  -->
        <icon src="build/images/icon/ios/icon-60@3x.png" width="180" height="180"/>
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="build/images/icon/ios/icon-60.png" width="60" height="60"/>
        <icon src="build/images/icon/ios/icon-60@2x.png" width="120" height="120"/>
        <!-- iPad -->
        <icon src="build/images/icon/ios/icon-76.png" width="76" height="76"/>
        <icon src="build/images/icon/ios/icon-76@2x.png" width="152" height="152"/>
        <!-- iOS 6.1 -->
        <!-- Spotlight Icon -->
        <icon src="build/images/icon/ios/icon-40.png" width="40" height="40"/>
        <icon src="build/images/icon/ios/icon-40@2x.png" width="80" height="80"/>
        <!-- iPhone / iPod Touch -->
        <icon src="build/images/icon/ios/icon.png" width="57" height="57"/>
        <icon src="build/images/icon/ios/icon@2x.png" width="114" height="114"/>
        <!-- iPad -->
        <icon src="build/images/icon/ios/icon-72.png" width="72" height="72"/>
        <icon src="build/images/icon/ios/icon-72@2x.png" width="144" height="144"/>
        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="build/images/icon/ios/icon-small.png" width="29" height="29"/>
        <icon src="build/images/icon/ios/icon-small@2x.png" width="58" height="58"/>
        <!-- iPad Spotlight and Settings Icon -->
        <icon src="build/images/icon/ios/icon-50.png" width="50" height="50"/>
        <icon src="build/images/icon/ios/icon-50@2x.png" width="100" height="100"/>

        <!-- images are determined by width and height. The following are supported -->
        <splash src="build/images/splash/ios/Default~iphone.png" width="320" height="480"/>
        <splash src="build/images/splash/ios/Default@2x~iphone.png" width="640" height="960"/>
        <splash src="build/images/splash/ios/Default-Portrait~ipad.png" width="768" height="1024"/>
        <splash src="build/images/splash/ios/Default-Portrait@2x~ipad.png" width="1536" height="2048"/>
        <splash src="build/images/splash/ios/Default-Landscape~ipad.png" width="1024" height="768"/>
        <splash src="build/images/splash/ios/Default-Landscape@2x~ipad.png" width="2048" height="1536"/>
        <splash src="build/images/splash/ios/Default-568h@2x~iphone.png" width="640" height="1136"/>
        <splash src="build/images/splash/ios/Default-667h.png" width="750" height="1334"/>
        <splash src="build/images/splash/ios/Default-736h.png" width="1242" height="2208"/>
        <splash src="build/images/splash/ios/Default-Landscape-736h.png" width="2208" height="1242"/>
    </platform>

</widget>

