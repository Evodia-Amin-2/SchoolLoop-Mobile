<?xml version='1.0' encoding='utf-8'?>
<widget id="com.schoolloop.mobileloop.mirror" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MobileLoop</name>
    <description>
        Mobile App for School Loop.
    </description>
    <author email="rob@schoolloop.com" href="http://www.schoolloop.com">
        School Loop Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="none" />
    <preference name="SplashScreenDelay" value="7000" />
    <preference name="SplashScreen" value="screen" />
    <preference name="Orientation" value="default" />
    <preference name="EnableViewportScale" value="true" />
    <icon src="build/images/icon/default.png" />
    <platform name="android">
        <preference name="KeepRunning" value="false" />
        <icon density="ldpi" src="build/images/icon/android/mipmap-ldpi/ic_launcher.png" />
        <icon density="mdpi" src="build/images/icon/android/mipmap-mdpi/ic_launcher.png" />
        <icon density="hdpi" src="build/images/icon/android/mipmap-hdpi/ic_launcher.png" />
        <icon density="xhdpi" src="build/images/icon/android/mipmap-xhdpi/ic_launcher.png" />
        <icon density="xxhdpi" src="build/images/icon/android/mipmap-xxhdpi/ic_launcher.png" />
        <icon density="xxxhdpi" src="build/images/icon/android/mipmap-xxxhdpi/ic_launcher.png" />
        <splash density="land-hdpi" src="build/images/splash/android/land-hdpi.png" />
        <splash density="land-ldpi" src="build/images/splash/android/land-ldpi.png" />
        <splash density="land-mdpi" src="build/images/splash/android/land-mdpi.png" />
        <splash density="land-xhdpi" src="build/images/splash/android/land-xhdpi.png" />
        <splash density="port-hdpi" src="build/images/splash/android/port-hdpi.png" />
        <splash density="port-ldpi" src="build/images/splash/android/port-ldpi.png" />
        <splash density="port-mdpi" src="build/images/splash/android/port-mdpi.png" />
        <splash density="port-xhdpi" src="build/images/splash/android/port-xhdpi.png" />
    </platform>
    <platform name="ios">
        <icon height="40" src="build/images/icon/ios/Icon-40.png" width="40" />
        <icon height="80" src="build/images/icon/ios/Icon-40@2x.png" width="80" />
        <icon height="120" src="build/images/icon/ios/Icon-40@3x.png" width="120" />
        <icon height="60" src="build/images/icon/ios/Icon-60.png" width="60" />
        <icon height="120" src="build/images/icon/ios/Icon-60@2x.png" width="120" />
        <icon height="180" src="build/images/icon/ios/Icon-60@3x.png" width="180" />
        <icon height="72" src="build/images/icon/ios/Icon-72.png" width="72" />
        <icon height="144" src="build/images/icon/ios/Icon-72@2x.png" width="144" />
        <icon height="76" src="build/images/icon/ios/Icon-76.png" width="76" />
        <icon height="152" src="build/images/icon/ios/Icon-76@2x.png" width="152" />
        <icon height="167" src="build/images/icon/ios/Icon-83.5@2x.png" width="167" />
        <icon height="50" src="build/images/icon/ios/Icon-Small-50.png" width="50" />
        <icon height="100" src="build/images/icon/ios/Icon-Small-50@2x.png" width="100" />
        <icon height="29" src="build/images/icon/ios/Icon-Small.png" width="29" />
        <icon height="58" src="build/images/icon/ios/Icon-Small@2x.png" width="58" />
        <icon height="87" src="build/images/icon/ios/Icon-Small@3x.png" width="87" />
        <icon height="57" src="build/images/icon/ios/Icon.png" width="57" />
        <icon height="114" src="build/images/icon/ios/Icon@2x.png" width="114" />
        <splash height="480" src="build/images/splash/ios/Default~iphone.png" width="320" />
        <splash height="960" src="build/images/splash/ios/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="build/images/splash/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="build/images/splash/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="768" src="build/images/splash/ios/Default-Landscape~ipad.png" width="1024" />
        <splash height="1536" src="build/images/splash/ios/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="1136" src="build/images/splash/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="build/images/splash/ios/Default-667h.png" width="750" />
        <splash height="2208" src="build/images/splash/ios/Default-736h.png" width="1242" />
        <splash height="1242" src="build/images/splash/ios/Default-Landscape-736h.png" width="2208" />
    </platform>
    <plugin name="cordova-plugin-console" spec="~1.0.2" />
    <plugin name="cordova-plugin-device" spec="~1.1.0" />
    <plugin name="cordova-plugin-dialogs" spec="~1.2.0" />
    <plugin name="cordova-plugin-globalization" spec="~1.0.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.1.0" />
    <plugin name="cordova-plugin-screen-orientation" spec="~1.4.0" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.0.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.0.0" />
    <plugin name="cordova-plugin-vibration" spec="~2.0.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="com.cmackay.plugins.googleanalytics" spec="~0.1.22" />
</widget>
