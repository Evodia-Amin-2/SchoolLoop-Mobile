<?xml version='1.0' encoding='utf-8'?>
<widget id="com.schoolloop.mobileloop.app" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="Globalization">
        <param name="android-package" value="org.apache.cordova.globalization.Globalization" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <feature name="YoikScreenOrientation">
        <param name="android-package" value="net.yoik.cordova.plugins.screenorientation.YoikScreenOrientation" />
    </feature>
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
        <param name="onload" value="true" />
    </feature>
    <feature name="StatusBar">
        <param name="android-package" value="org.apache.cordova.statusbar.StatusBar" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Vibration">
        <param name="android-package" value="org.apache.cordova.vibration.Vibration" />
    </feature>
    <feature name="GoogleAnalytics">
        <param name="android-package" value="com.cmackay.plugins.googleanalytics.GoogleAnalyticsPlugin" />
    </feature>
    <feature name="Toast">
        <param name="android-package" value="nl.xservices.plugins.Toast" />
    </feature>
    <feature name="SpinnerDialog">
        <param name="android-package" value="hu.dpal.phonegap.plugins.SpinnerDialog" />
    </feature>
    <feature name="Keyboard">
        <param name="android-package" value="io.ionic.keyboard.IonicKeyboard" />
        <param name="onload" value="true" />
    </feature>
    <feature name="PushNotification">
        <param name="android-package" value="com.adobe.phonegap.push.PushPlugin" />
    </feature>
    <allow-intent href="market:*" />
    <preference name="KeepRunning" value="false" />
    <icon density="ldpi" src="build/images/icon/android/mipmap-ldpi/ic_launcher.png" />
    <icon density="mdpi" src="build/images/icon/android/mipmap-mdpi/ic_launcher.png" />
    <icon density="hdpi" src="build/images/icon/android/mipmap-hdpi/ic_launcher.png" />
    <icon density="xhdpi" src="build/images/icon/android/mipmap-xhdpi/ic_launcher.png" />
    <icon density="xxhdpi" src="build/images/icon/android/mipmap-xxhdpi/ic_launcher.png" />
    <icon density="xxxhdpi" src="build/images/icon/android/mipmap-xxxhdpi/ic_launcher.png" />
    <splash density="land-hdpi" src="build/images/splash/android/land-hdpi.png" />
    <splash density="land-ldpi" src="build/images/splash/android/land-ldpi.png" />
    <splash density="land-mdpi" src="build/images/splash/android/land-mdpi.png" />
    <splash density="land-xhdpi" src="build/images/splash/android/land-xhdpi.png" />
    <splash density="land-xxhdpi" src="build/images/splash/android/land-xxhdpi.png" />
    <splash density="land-xxxhdpi" src="build/images/splash/android/land-xxxhdpi.png" />
    <splash density="port-hdpi" src="build/images/splash/android/port-hdpi.png" />
    <splash density="port-ldpi" src="build/images/splash/android/port-ldpi.png" />
    <splash density="port-mdpi" src="build/images/splash/android/port-mdpi.png" />
    <splash density="port-xhdpi" src="build/images/splash/android/port-xhdpi.png" />
    <splash density="port-xxhdpi" src="build/images/splash/android/port-xxhdpi.png" />
    <splash density="port-xxxhdpi" src="build/images/splash/android/port-xxxhdpi.png" />
    <name>MobileLoop</name>
    <description>
        Mobile App for School Loop.
    </description>
    <author email="rob@schoolloop.com" href="http://www.schoolloop.com">
        School Loop Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
