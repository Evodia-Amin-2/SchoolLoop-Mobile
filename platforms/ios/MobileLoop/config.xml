    <splash height="2048" src="build/images/splash/ios/Default-Portrait@2x~ipad.png" width="1536" />
    <splash height="768" src="build/images/splash/ios/Default-Landscape~ipad.png" width="1024" />
    <splash height="1536" src="build/images/splash/ios/Default-Landscape@2x~ipad.png" width="2048" />
